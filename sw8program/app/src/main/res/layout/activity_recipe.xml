<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    tools:context="program.sw8.sw8program.recipetemptemtept">

    <ScrollView
        android:id="@+id/recipe_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/scroll_view_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/recipe_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loading"
                android:layout_gravity="center_horizontal"
                android:textSize="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"/>

            <RelativeLayout
                android:id="@+id/viewpager_container"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_below="@id/recipe_name"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="15dp">
    
                <android.support.v4.view.ViewPager
                    android:id="@+id/paged_image_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="#d3d3d3"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:paddingTop="10dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/ingredient_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:id="@+id/preparation_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:text="@string/loading"
                    android:layout_weight="0.5"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="15dp"/>

                </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="#d3d3d3"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"/>

            <LinearLayout
                android:id="@+id/comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="#d3d3d3"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"/>

<!--
            <Button
                android:id="@+id/comment_submit"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentRight="true"
                android:text="@string/comment_submit"/>

            <EditText
                android:id="@+id/comment_box"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:minHeight="100dp"
                android:hint="@string/comment_hint"
                android:scrollHorizontally="false"
                android:maxLength="400"
                android:textSize="16dp"
                android:imeOptions="actionSend"
                android:inputType="textEmailAddress|textEmailSubject|textCapSentences"
                android:singleLine="false"/>
-->

            <EditText
                android:id="@+id/comment_edit_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:maxLines="5"
                android:minLines="5">
            </EditText>

            <Button
                android:id="@+id/comment_save_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Save"
                android:textSize="10dp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>



