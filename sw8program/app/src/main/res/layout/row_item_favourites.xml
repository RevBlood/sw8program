<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="50dp">

    <ImageButton
        android:id="@+id/row_item_toggle_favourite"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/favourites"/>

    <RelativeLayout
        android:id="@+id/row_recipe_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/row_item_toggle_favourite">

        <ImageView
            android:id="@+id/row_item_image"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_launcher"/>

        <TextView
            android:id="@+id/row_item_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/loading"
            android:textSize="25dp"
            android:gravity="left|bottom"
            android:layout_toRightOf="@id/row_item_image"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:singleLine="true"/>

    </RelativeLayout>
</RelativeLayout>